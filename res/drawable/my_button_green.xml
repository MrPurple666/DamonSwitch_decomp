<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#ff57fc80"
                android:endColor="#ff50772e"
                android:angle="270.0" />
            <corners
                android:radius="3.0dip" />
        </shape>
    </item>
    <item
        android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#ffff6d00"
                android:endColor="#ffffd180"
                android:angle="270.0" />
            <corners
                android:radius="3.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ff7eaa55"
                android:endColor="#ff80ffa4"
                android:angle="270.0" />
            <corners
                android:radius="3.0dip" />
        </shape>
    </item>
</selector>