<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#ff2962ff"
                android:endColor="#ff82b1ff"
                android:angle="270.0" />
            <stroke
                android:width="1.0dip"
                android:color="#ffbdbdbd" />
            <corners
                android:radius="8.0dip" />
        </shape>
    </item>
    <item
        android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#ffffd180"
                android:endColor="#ffff6d00"
                android:angle="270.0" />
            <stroke
                android:width="1.0dip"
                android:color="#ffbdbdbd" />
            <corners
                android:radius="8.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorMyBlueLight"
                android:endColor="@color/colorMyBlueLight"
                android:angle="270.0" />
            <stroke
                android:width="1.0dip"
                android:color="@android:color/white" />
            <corners
                android:radius="8.0dip" />
        </shape>
    </item>
</selector>