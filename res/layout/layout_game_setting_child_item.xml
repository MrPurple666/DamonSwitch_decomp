<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:descendantFocusability="blocksDescendants"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/item_main_centent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.0dip"
        android:layout_marginBottom="6.0dip">
        <androidx.appcompat.widget.AppCompatCheckBox
            android:theme="@style/MyAppCompatCheckBox"
            android:layout_gravity="center_vertical"
            android:id="@id/gamesetting_child_item_checkbox"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="26.0dip"
            android:layout_marginLeft="26.0dip"
            android:checked="false" />
        <TextView
            android:textSize="14.0sp"
            android:textColor="@color/text_color_white_light"
            android:gravity="center|left"
            android:layout_gravity="center_vertical"
            android:id="@id/gamesetting_child_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.0dip"
            android:layout_marginRight="8.0dip"
            android:text="@string/pref_system_SystemSpeedTweak"
            android:layout_centerVertical="true" />
    </LinearLayout>
    <View
        android:id="@id/gamesetting_child_item_line"
        android:background="@color/colorMyDark"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="32.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_below="@id/item_main_centent" />
</RelativeLayout>