<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/color_donate_item"
    android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@id/ddimageView"
        android:layout_width="68.0dip"
        android:layout_height="68.0dip"
        android:layout_margin="8.0dip"
        android:src="@mipmap/ic_user_portrait"
        android:layout_centerVertical="true"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="0.0dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:textSize="18.0sp"
        android:textColor="@color/white"
        android:id="@id/ddname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="@dimen/activity_vertical_spacing"
        android:text="title"
        android:layout_marginStart="16.0dip"
        app:layout_constraintStart_toEndOf="@id/ddimageView"
        app:layout_constraintTop_toTopOf="@id/ddimageView" />
    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/text_color_white_light"
        android:ellipsize="end"
        android:id="@id/dd_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="@id/ddimageView"
        app:layout_constraintTop_toBottomOf="@id/ddimageView" />
    <TextView
        android:textSize="16.0sp"
        android:textColor="#fff03911"
        android:gravity="center"
        android:id="@id/my_donate_symbol"
        android:paddingTop="@dimen/activity_horizontal_spacing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_spacing"
        app:layout_constraintStart_toStartOf="@id/dd_content"
        app:layout_constraintTop_toBottomOf="@id/dd_content" />
    <TextView
        android:textSize="58.0sp"
        android:textStyle="bold"
        android:textColor="#fff03911"
        android:gravity="center"
        android:id="@id/ddmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_spacing"
        app:layout_constraintStart_toEndOf="@id/my_donate_symbol"
        app:layout_constraintTop_toTopOf="@id/my_donate_symbol" />
    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/text_color_gray"
        android:gravity="center"
        android:id="@id/dd_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="20.0dip"
        app:layout_constraintEnd_toEndOf="@id/dd_content"
        app:layout_constraintTop_toBottomOf="@id/dd_content" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/info_item_height"
        app:layout_constraintStart_toStartOf="@id/ddmoney"
        app:layout_constraintTop_toBottomOf="@id/ddmoney">
        <com.google.android.material.button.MaterialButton
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
            android:textSize="12.0sp"
            android:textColor="#ffd52b06"
            android:gravity="center"
            android:id="@id/ddlook"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="@string/donate_certificate"
            android:layout_weight="1.0"
            android:layout_marginEnd="10.0dip"
            app:backgroundTint="@color/color_donate_item"
            app:strokeColor="#ffd52b06"
            app:strokeWidth="1.0dip" />
        <com.google.android.material.button.MaterialButton
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
            android:textSize="12.0sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/ddshare"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="@string/share_to_friends"
            android:layout_weight="1.0"
            android:layout_marginStart="10.0dip"
            app:backgroundTint="#ffd52b06"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ddmoney"
            app:strokeColor="#fff03911" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>