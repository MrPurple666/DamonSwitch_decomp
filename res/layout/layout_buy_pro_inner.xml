<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/background_dialog_corner_dark"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/text_size_title"
        android:textColor="@color/text_color_pro"
        android:gravity="center"
        android:id="@id/buy_pro_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_spacing"
        android:text="@string/BuyFeatureDialog_RecommendPro_title" />
    <androidx.cardview.widget.CardView
        android:id="@id/buy_pro_name_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="8.0dip"
        android:layout_below="@id/buy_pro_name"
        app:cardCornerRadius="6.0dip"
        app:cardElevation="0.0dip"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="@mipmap/background_vip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/text_size_big"
                android:textStyle="bold"
                android:textColor="@color/text_color_gray_deep"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_spacing"
                android:text="@string/pro" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/text_size_tiny"
                android:textStyle="bold"
                android:textColor="@color/bt_red"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_spacing_small"
                android:text="@string/restored_normal_price" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="36.0sp"
                android:textStyle="bold"
                android:textColor="@color/text_color_gray_deep"
                android:gravity="center"
                android:id="@id/buy_pro_price_now_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_spacing"
                android:text="￥——" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/text_size_tiny"
                android:textStyle="bold"
                android:textColor="@color/text_color_gray_deep"
                android:gravity="center"
                android:id="@id/buy_pro_price_ori_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/white"
        android:gravity="center|top"
        android:id="@id/buy_pro_price_discount_tv"
        android:background="@mipmap/bg_buy_pro_tip"
        android:paddingLeft="8.0dip"
        android:paddingTop="6.0dip"
        android:paddingRight="8.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6.0dip"
        android:layout_alignTop="@id/buy_pro_name"
        android:layout_alignParentRight="true" />
</RelativeLayout>