<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:id="@id/dialog_qr_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@id/wx_qr_code"
            android:layout_width="260.0dip"
            android:layout_height="260.0dip"
            android:layout_marginTop="16.0dip"
            android:src="@drawable/umeng_socialize_wechat"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@id/ali_qr_code"
            android:layout_width="260.0dip"
            android:layout_height="260.0dip"
            android:layout_marginTop="16.0dip"
            android:src="@drawable/umeng_socialize_wechat"
            android:layout_below="@id/wx_qr_code"
            android:layout_centerHorizontal="true" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_spacing"
        android:layout_toRightOf="@id/dialog_qr_layout"
        android:layout_centerVertical="true">
        <Button
            android:textSize="14.0sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@id/btn_refresh"
            android:background="@drawable/my_button_blue"
            android:padding="8.0dip"
            android:layout_width="140.0dip"
            android:layout_height="60.0dip"
            android:text="@string/pay_qr_refresh"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false" />
        <Button
            android:textSize="14.0sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@id/btn_cancel"
            android:background="@drawable/my_button_blue"
            android:padding="8.0dip"
            android:layout_width="140.0dip"
            android:layout_height="60.0dip"
            android:layout_marginTop="10.0dip"
            android:text="@string/pay_qr_cancel"
            android:layout_below="@id/btn_refresh"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>