<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/activity_login_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:id="@id/title_part"
        android:background="@color/uvv_titlebar_bg"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_alignParentTop="true">
        <ImageButton
            android:gravity="center"
            android:id="@id/title_back_imagebutton"
            android:background="#00000000"
            android:layout_width="50.0dip"
            android:layout_height="fill_parent"
            android:src="@drawable/icon_left"
            android:layout_alignParentLeft="true" />
        <TextView
            android:textSize="18.0dip"
            android:textColor="#ffffffff"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center|left"
            android:id="@id/title_text"
            android:paddingLeft="58.0dip"
            android:paddingRight="8.0dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="标题"
            android:singleLine="true"
            android:layout_toRightOf="@id/media_play_title_back" />
    </RelativeLayout>
    <WebView
        android:id="@id/wv_webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>