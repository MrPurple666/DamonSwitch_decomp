<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingLeft="@dimen/activity_horizontal_spacing_tiny"
    android:paddingRight="@dimen/activity_horizontal_spacing_tiny"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.damonplay.damonps2.uiUtils.IconFontTextView
        android:textSize="@dimen/text_size_icon"
        android:textColor="@color/text_color_white_light"
        android:gravity="center"
        android:id="@id/simple_info_item_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_spacing"
        android:text="@string/icon_setting"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />
    <com.damonplay.damonps2.uiUtils.IconFontTextView
        android:textSize="@dimen/text_size_icon_tiny"
        android:textColor="@color/text_color_gray"
        android:gravity="center"
        android:id="@id/simple_info_item_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_spacing_tiny"
        android:text="@string/icon_next"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
    <TextView
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/text_color_white_light"
        android:gravity="center|right"
        android:id="@id/simple_info_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240.0dip"
        android:layout_toLeftOf="@id/simple_info_item_next"
        android:layout_centerVertical="true"
        android:layout_alignWithParentIfMissing="true" />
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/activity_vertical_spacing"
        android:layout_marginRight="@dimen/activity_vertical_spacing_tiny"
        android:layout_toLeftOf="@id/simple_info_item_value"
        android:layout_toRightOf="@id/simple_info_item_ic"
        android:layout_centerVertical="true"
        android:layout_alignWithParentIfMissing="true">
        <TextView
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/text_color_white"
            android:layout_gravity="center_vertical"
            android:id="@id/simple_info_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/text_size_tiny"
            android:textColor="@color/text_color_gray"
            android:layout_gravity="center_vertical"
            android:id="@id/simple_info_item_name_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_spacing_tiny" />
    </LinearLayout>
</RelativeLayout>