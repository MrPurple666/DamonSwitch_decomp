<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="@drawable/background_dialog_corner_dark"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="16.0sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_white_light"
        android:gravity="center"
        android:id="@id/ConvertDialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:text="@string/ConvertDialog_title"
        android:layout_centerHorizontal="true" />
    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/text_color_white_light"
        android:id="@id/ConvertDialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginRight="16.0dip"
        android:text="@string/ConvertDialog_content"
        android:layout_below="@id/ConvertDialog_title" />
    <ProgressBar
        android:id="@id/ConvertDialog_progressbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_below="@id/ConvertDialog_content"
        style="?android:progressBarStyleHorizontal" />
    <TextView
        android:textSize="16.0sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_white_light"
        android:id="@id/ConvertDialog_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:text="0%"
        android:layout_below="@id/ConvertDialog_progressbar"
        android:layout_centerHorizontal="true" />
    <TextView
        android:textSize="16.0sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_white_light"
        android:id="@id/ConvertDialog_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:text="0/0"
        android:layout_below="@id/ConvertDialog_progressbar"
        android:layout_alignRight="@id/ConvertDialog_progressbar" />
    <TextView
        android:textSize="16.0sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_white_light"
        android:id="@id/ConvertDialog_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:text="0s"
        android:layout_below="@id/ConvertDialog_progressbar"
        android:layout_alignLeft="@id/ConvertDialog_progressbar" />
    <TextView
        android:textSize="10.0sp"
        android:textColor="@color/text_color_white_light"
        android:id="@id/ConvertDialog_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:text=""
        android:minLines="2"
        android:layout_below="@id/ConvertDialog_percent"
        android:layout_alignLeft="@id/ConvertDialog_progressbar" />
    <Button
        android:textSize="16.0sp"
        android:textColor="#ffffffff"
        android:id="@id/ConvertDialog_button"
        android:background="@drawable/background_btn_corner_dark"
        android:padding="12.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="16.0dip"
        android:text="0.00s"
        android:layout_below="@id/ConvertDialog_path"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false" />
</RelativeLayout>