<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/background_dialog_corner_dark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minWidth="260.0dip"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_gravity="right"
            android:id="@id/dialog_close_btn"
            android:padding="8.0dip"
            android:src="@mipmap/ic_close"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            style="@style/dialog_close_style" />
        <androidx.core.widget.NestedScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_spacing_large">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip">
                <TextView
                    android:textSize="18.0sp"
                    android:textColor="@color/text_color_white_light"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/snackbar_select_bios" />
                <TextView
                    android:textSize="16.0sp"
                    android:textColor="@color/text_color_white_light"
                    android:gravity="left"
                    android:id="@id/dialog_bios_check_content"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12.0dip"
                    android:layout_marginBottom="18.0dip"
                    android:text="@string/Tips_no_bios" />
                <TextView
                    android:textSize="16.0sp"
                    android:textColor="@color/text_color_white_light"
                    android:gravity="left"
                    android:id="@id/dialog_bios_check_append"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12.0dip"
                    android:layout_marginBottom="18.0dip"
                    android:text="@string/Tips_no_bios_append" />
                <androidx.appcompat.widget.AppCompatButton
                    android:textSize="14.0sp"
                    android:textColor="@color/text_color_white_light"
                    android:gravity="center"
                    android:id="@id/dialog_bios_check_playdrive"
                    android:background="@color/text_color_gray_deep"
                    android:padding="5.0dip"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:minHeight="40.0dip"
                    android:text="@string/playdrive_bios"
                    android:textAllCaps="false" />
                <androidx.appcompat.widget.AppCompatButton
                    android:textSize="14.0sp"
                    android:textColor="@color/text_color_white_light"
                    android:gravity="center"
                    android:id="@id/dialog_bios_check_scan_btn"
                    android:background="@color/text_color_gray_deep"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:text="@string/phone_has_bios"
                    android:textAllCaps="false" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</LinearLayout>