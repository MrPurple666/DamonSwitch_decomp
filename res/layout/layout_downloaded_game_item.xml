<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/color_gray_deep"
    android:layout_width="fill_parent"
    android:layout_height="136.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@id/game_item_poster"
        android:layout_width="90.0dip"
        android:layout_height="120.0dip"
        android:layout_margin="@dimen/activity_horizontal_spacing_small"
        android:src="@mipmap/ic_gamefile" />
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_white_light"
            android:gravity="center_vertical"
            android:id="@id/game_item_name"
            android:layout_width="wrap_content"
            android:layout_height="46.0dip"
            android:layout_marginTop="4.0dip"
            android:maxLines="2"
            android:layout_alignParentLeft="true" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="horizontal"
            android:background="@drawable/background_item_corner_trans"
            android:layout_width="wrap_content"
            android:layout_height="22.0dip"
            android:layout_below="@id/game_item_name"
            android:layout_alignParentLeft="true">
            <TextView
                android:textSize="@dimen/text_size_tiny"
                android:textColor="@color/text_color_white_light"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@id/game_item_size"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_spacing_tiny" />
            <View
                android:layout_gravity="center_vertical"
                android:id="@id/game_item_line"
                android:background="@color/colorMyGrayer"
                android:layout_width="1.0px"
                android:layout_height="24.0dip"
                android:layout_marginLeft="@dimen/activity_horizontal_spacing"
                android:layout_marginRight="@dimen/activity_horizontal_spacing" />
            <TextView
                android:textSize="@dimen/text_size_tiny"
                android:textColor="@color/text_color_white_light"
                android:gravity="center_vertical"
                android:id="@id/game_item_location"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="@dimen/activity_horizontal_spacing_tiny" />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <TextView
            android:textSize="@dimen/text_size_tiny"
            android:textColor="@color/text_color_white_light"
            android:id="@id/game_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip"
            android:layout_marginBottom="4.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" />
        <com.damonplay.damonps2.uiUtils.IconFontTextView
            android:textSize="@dimen/text_size_icon"
            android:textColor="@color/ic_color_active"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@id/game_item_play"
            android:padding="6.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_spacing"
            android:text="@string/icon_play"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
        <com.damonplay.damonps2.uiUtils.IconFontTextView
            android:textSize="@dimen/text_size_icon"
            android:textColor="@color/ic_color_active"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@id/game_item_delete"
            android:padding="6.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_spacing"
            android:text="@string/icon_recycle_bin"
            android:layout_toLeftOf="@id/game_item_play"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</LinearLayout>