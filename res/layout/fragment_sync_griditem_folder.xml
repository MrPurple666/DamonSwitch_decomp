            android:id="@id/game_item_poster_select_layout"
            android:background="@color/qr_code_finder_mask"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/game_item_directory_poster"
            android:layout_alignBottom="@id/game_item_directory_poster">
