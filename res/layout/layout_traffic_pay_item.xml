<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@id/traffic_pay_item_button_layout"
        android:background="@color/colorPrimary"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/info_item_height"
        android:layout_margin="1.0dip">
        <TextView
            android:textSize="24.0sp"
            android:typeface="sans"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@id/traffic_pay_item_name"
            android:layout_width="90.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_spacing"
            android:text="4GB"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16.0sp"
            android:autoSizeMaxTextSize="24.0sp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/traffic_pay_item_name"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="@dimen/text_size_tiny"
                android:textColor="@color/qr_code_white"
                android:gravity="center"
                android:id="@id/traffic_pay_item_recommand_icon"
                android:background="@drawable/background_hot_btn_corner"
                android:paddingLeft="@dimen/activity_horizontal_spacing_tiny"
                android:paddingTop="2.0dip"
                android:paddingRight="@dimen/activity_horizontal_spacing_tiny"
                android:paddingBottom="2.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_spacing_tiny"
                android:text="@string/recommend"
                android:drawableLeft="@mipmap/icon_hot_fire" />
            <TextView
                android:textSize="@dimen/text_size_tiny"
                android:textColor="#fffa8c16"
                android:gravity="center|left"
                android:id="@id/traffic_pay_item_max_traffic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/text_size_tiny"
                android:textColor="@color/text_color_white_light"
                android:gravity="center|left"
                android:id="@id/traffic_pay_item_price_original"
                android:padding="2.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip" />
        </LinearLayout>
        <TextView
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@id/traffic_pay_item_price"
            android:background="@color/color_product_free"
            android:paddingLeft="@dimen/activity_horizontal_spacing"
            android:paddingRight="@dimen/activity_horizontal_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:text="9.9"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</RelativeLayout>