<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:padding="16.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="16.0sp"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimary"
        android:gravity="center"
        android:id="@id/piracy_checker_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_unlicensed_title"
        android:maxLines="2" />
    <TextView
        android:textColor="?android:textColorPrimary"
        android:id="@id/piracy_checker_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_unlicensed_description" />
    <TextView
        android:textColor="?android:textColorPrimary"
        android:id="@id/piracy_checker_harmfulApp_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/harmful_app_description" />
    <TextView
        android:textColor="?android:textColorPrimary"
        android:gravity="bottom|center|left"
        android:id="@id/piracy_checker_appVersionName"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="@string/app_name" />
</LinearLayout>