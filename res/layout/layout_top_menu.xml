<?xml version="1.0" encoding="utf-8"?>
<merge
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="48.0dip"
        android:layout_marginRight="@dimen/activity_horizontal_spacing_tiny"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <com.damonplay.damonps2.uiUtils.IconFontTextView
            android:textSize="@dimen/text_size_icon"
            android:textColor="@color/text_color_white_light"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@id/toolbar_query"
            android:padding="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/activity_horizontal_spacing"
            android:text="@string/icon_query" />
        <com.damonplay.damonps2.uiUtils.IconFontTextView
            android:textSize="@dimen/text_size_icon"
            android:textColor="@color/text_color_white_light"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@id/toolbar_scan"
            android:padding="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/activity_horizontal_spacing"
            android:text="@string/icon_scan" />
        <com.damonplay.damonps2.uiUtils.IconFontTextView
            android:textSize="@dimen/text_size_icon"
            android:textColor="@color/text_color_white_light"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@id/toolbar_setting"
            android:padding="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/activity_horizontal_spacing"
            android:text="@string/icon_setting" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</merge>