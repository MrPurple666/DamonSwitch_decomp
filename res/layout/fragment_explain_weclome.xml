<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="38.0sp"
        android:textColor="@color/text_color_white_light"
        android:id="@id/welcomeTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_spacing"
        android:layout_marginTop="@dimen/activity_vertical_spacing_large"
        android:layout_marginRight="@dimen/activity_horizontal_spacing" />
    <TextView
        android:textSize="18.0sp"
        android:textColor="@color/text_color_gray"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_spacing"
        android:layout_marginTop="@dimen/activity_vertical_spacing_large"
        android:layout_marginRight="@dimen/activity_horizontal_spacing"
        android:text="@string/explaindesc" />
    <TextView
        android:textSize="18.0sp"
        android:textColor="@color/ic_color_active"
        android:id="@id/fragment_explain_finish"
        android:padding="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40.0dip"
        android:text="@string/welcome_finish" />
    <TextView
        android:textSize="18.0sp"
        android:textColor="@color/ic_color_active"
        android:id="@id/fragment_explain_next"
        android:padding="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_next" />
</androidx.appcompat.widget.LinearLayoutCompat>