<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@id/game_item_poster_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.0dip">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@id/game_item_poster"
            android:layout_width="210.0dip"
            android:layout_height="300.0dip"
            app:srcCompat="@mipmap/ic_folder" />
        <ImageView
            android:id="@id/game_item_poster_bottom_delete"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="28.0dip"
            android:layout_height="20.0dip"
            android:src="@drawable/ic_delete_64"
            android:layout_alignLeft="@id/game_item_poster"
            android:layout_alignBottom="@id/game_item_poster" />
        <RelativeLayout
            android:id="@id/game_item_poster_download_progress_layout"
            android:background="@color/qr_code_finder_mask"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20.0dip"
            android:layout_alignTop="@id/game_item_poster"
            android:layout_alignBottom="@id/game_item_poster">
            <com.damonplay.damonps2.uiUtils.SimpleRoundProgress
                android:id="@id/game_item_poster_download_progress"
                android:focusable="false"
                android:layout_width="120.0dip"
                android:layout_height="120.0dip"
                android:layout_margin="12.0dip"
                android:layout_centerInParent="true"
                app:srp_max="100"
                app:srp_progressColor="@color/colorAccent"
                app:srp_roundColor="@color/colorMyGray"
                app:srp_roundWidth="6.0dip"
                app:srp_startAngle="270"
                app:srp_style="STROKE" />
            <TextView
                android:textAppearance="?textAppearanceListItem"
                android:textSize="22.0sp"
                android:textColor="@color/colorMyGray"
                android:gravity="center"
                android:id="@id/game_item_poster_progress_text"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14.0dip"
                android:layout_marginRight="2.0dip"
                android:layout_alignTop="@id/game_item_poster_download_progress"
                android:layout_centerInParent="true" />
            <TextView
                android:textAppearance="?textAppearanceListItem"
                android:textSize="12.0sp"
                android:textColor="@color/colorMyGray"
                android:gravity="center"
                android:id="@id/game_item_poster_progress_speed"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:layout_marginRight="2.0dip"
                android:text="1.24MB/s\n已下载325MB"
                android:layout_below="@id/game_item_poster_progress_text"
                android:layout_centerInParent="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@id/game_item_poster_select_layout"
            android:background="@color/qr_code_finder_mask"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/game_item_poster"
            android:layout_alignBottom="@id/game_item_poster">
            <ImageView
                android:id="@id/game_item_poster_select_icon"
                android:paddingBottom="20.0dip"
                android:layout_width="42.0dip"
                android:layout_height="52.0dip"
                android:src="@drawable/icon_unselected"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:textSize="10.0sp"
        android:textColor="@color/colorMyGray"
        android:gravity="center"
        android:id="@id/game_item_state"
        android:background="@drawable/background_item_corner_trans"
        android:layout_width="fill_parent"
        android:layout_height="24.0dip"
        android:layout_margin="2.0dip"
        android:text="@string/sync_not" />
    <TextView
        android:textAppearance="?textAppearanceListItem"
        android:textSize="10.0sp"
        android:textColor="@color/colorMyGray"
        android:ellipsize="end"
        android:gravity="center|left"
        android:id="@id/game_item_title"
        android:layout_width="fill_parent"
        android:layout_height="26.0dip"
        android:layout_marginLeft="2.0dip"
        android:layout_marginRight="2.0dip"
        android:maxLines="2"
        android:lineSpacingExtra="-3.0dip" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/game_property_layout1"
        android:layout_width="fill_parent"
        android:layout_height="20.0dip">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:background="@drawable/background_item_corner_trans"
            android:paddingLeft="2.0dip"
            android:paddingRight="2.0dip"
            android:layout_width="0.0dip"
            android:layout_height="16.0dip"
            android:layout_margin="2.0dip"
            android:layout_weight="1.0">
            <ImageView
                android:layout_gravity="center_vertical"
                android:padding="2.0dip"
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:src="@drawable/icon_language"
                android:layout_weight="1.0" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@id/game_item_language"
                android:padding="2.0dip"
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:src="@drawable/ic_lang_en"
                android:layout_weight="1.0" />
        </LinearLayout>
        <TextView
            android:textSize="10.0sp"
            android:textColor="@color/colorMyGray"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@id/game_item_size"
            android:background="@drawable/background_item_corner_trans"
            android:paddingLeft="2.0dip"
            android:paddingRight="2.0dip"
            android:layout_width="0.0dip"
            android:layout_height="16.0dip"
            android:layout_margin="2.0dip"
            android:singleLine="true"
            android:layout_weight="1.0" />
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:background="@drawable/background_item_corner_trans"
            android:paddingLeft="2.0dip"
            android:paddingRight="2.0dip"
            android:layout_width="0.0dip"
            android:layout_height="16.0dip"
            android:layout_margin="2.0dip"
            android:layout_weight="1.0">
            <ImageView
                android:layout_gravity="center_vertical"
                android:padding="2.0dip"
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:src="@drawable/icon_region"
                android:layout_weight="1.0" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@id/game_item_region"
                android:padding="2.0dip"
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:src="@drawable/ic_region_usa"
                android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>