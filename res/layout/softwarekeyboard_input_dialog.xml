<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/background_dialog_corner_dark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip">
        <ImageView
            android:layout_gravity="right"
            android:id="@id/btn_close"
            android:src="@mipmap/ic_close"
            style="@style/dialog_close_style" />
        <TextView
            android:textSize="18.0sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@id/dialog_input_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5.0dip"
            android:layout_marginBottom="@dimen/dp_4"
            android:text="@string/updateArchiveDesc" />
        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="@color/text_color_gray"
            android:id="@id/tl_etpass"
            android:padding="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            app:counterEnabled="true"
            app:counterMaxLength="32"
            app:counterTextColor="@color/ic_color_active"
            app:expandedHintEnabled="true"
            app:helperTextTextColor="@color/text_color_white_light"
            app:hintTextColor="@color/ic_color_active">
            <androidx.appcompat.widget.AppCompatEditText
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:id="@id/archive_descTv"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="90.0dip"
                android:layout_marginTop="10.0dip"
                android:maxLength="32"
                android:layout_marginStart="@dimen/activity_vertical_spacing"
                android:layout_marginEnd="@dimen/activity_vertical_spacing" />
            <TextView
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@id/edit_text_clear"
                android:background="@drawable/background_item_corner_trans"
                android:paddingLeft="@dimen/activity_vertical_spacing_big"
                android:paddingRight="@dimen/activity_vertical_spacing_big"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/product_item_height"
                android:layout_marginLeft="@dimen/activity_vertical_spacing"
                android:layout_marginRight="@dimen/activity_vertical_spacing_large"
                android:text="@string/clear"
                android:layout_alignParentLeft="true" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/ic_color_active"
            android:gravity="center"
            android:id="@id/sureTv"
            android:background="@color/text_color_gray_deep"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height_46"
            android:layout_margin="@dimen/activity_vertical_spacing_large"
            android:text="@string/string_ok" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>