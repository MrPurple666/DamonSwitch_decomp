<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="18.0sp"
        android:textColor="@color/colorMyDark"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@id/dialog_common_title"
        android:layout_width="fill_parent"
        android:layout_height="28.0dip"
        android:layout_marginTop="10.0dip"
        android:text="@string/joinOurQQGroup" />
    <TextView
        android:textSize="@dimen/text_size_big"
        android:textColor="@color/text_color_white_light"
        android:gravity="left"
        android:id="@id/dialog_common_content"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.0dip"
        android:layout_marginBottom="18.0dip" />
    <TextView
        android:id="@id/dialog_common_btn3"
        android:visibility="gone"
        style="@style/BottomDialogTextStyle" />
    <TextView
        android:id="@id/dialog_common_btn2"
        android:visibility="gone"
        android:layout_marginTop="1.0px"
        style="@style/BottomDialogTextStyle" />
    <TextView
        android:id="@id/dialog_common_btn1"
        android:visibility="gone"
        android:layout_marginTop="1.0px"
        style="@style/BottomDialogTextStyle" />
    <TextView
        android:id="@id/dialog_common_cancel_btn"
        android:layout_marginTop="10.0px"
        android:text="@android:string/cancel"
        style="@style/BottomDialogTextStyle" />
</LinearLayout>