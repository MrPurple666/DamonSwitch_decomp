<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:id="@id/start_dialog_contentlayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8.0dip"
    android:layout_marginTop="12.0dip"
    android:layout_marginRight="8.0dip"
    android:layout_marginBottom="16.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@id/wx_qr_code"
        android:layout_width="200.0dip"
        android:layout_height="200.0dip"
        android:layout_marginTop="16.0dip"
        android:src="@drawable/umeng_socialize_wechat"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@id/ali_qr_code"
        android:layout_width="200.0dip"
        android:layout_height="200.0dip"
        android:layout_marginTop="16.0dip"
        android:src="@drawable/umeng_socialize_wechat"
        android:layout_below="@id/wx_qr_code"
        android:layout_centerHorizontal="true" />
    <Button
        android:textSize="14.0sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@id/btn_refresh"
        android:background="@drawable/my_button_blue"
        android:padding="8.0dip"
        android:layout_width="240.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:text="@string/pay_qr_refresh"
        android:layout_below="@id/ali_qr_code"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false" />
    <Button
        android:textSize="14.0sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@id/btn_cancel"
        android:background="@drawable/my_button_blue"
        android:padding="8.0dip"
        android:layout_width="240.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:text="@string/pay_qr_cancel"
        android:layout_below="@id/btn_refresh"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false" />
</RelativeLayout>