<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@id/permission_dialog_close"
        android:src="@mipmap/ic_close_back"
        android:layout_alignParentRight="true"
        android:contentDescription="close dialog"
        style="@style/dialog_close_style" />
    <TextView
        android:textSize="16.0sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:id="@id/permission_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40.0dip"
        android:layout_marginBottom="8.0dip"
        android:layout_centerHorizontal="true" />
    <ScrollView
        android:id="@id/myscroll"
        android:layout_width="fill_parent"
        android:layout_height="360.0dip"
        android:layout_below="@id/permission_dialog_title">
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/permission_dialog_middle_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/permission_dialog_storage_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.0dip">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_storage_64"
                    android:scaleType="fitXY" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip">
                    <TextView
                        android:textSize="16.0sp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_dialog_storage" />
                    <TextView
                        android:textSize="12.0sp"
                        android:textColor="#ff4c4c4c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_dialog_storage_description" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/permission_dialog_phone_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.0dip">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone_64"
                    android:scaleType="fitXY" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip">
                    <TextView
                        android:textSize="16.0sp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_dialog_phone" />
                    <TextView
                        android:textSize="12.0sp"
                        android:textColor="#ff4c4c4c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_dialog_phone_description" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/permission_dialog_fine_location_layout"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.0dip">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location_64"
                    android:scaleType="fitXY" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip">
                    <TextView
                        android:textSize="16.0sp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/request_location" />
                    <TextView
                        android:textSize="12.0sp"
                        android:textColor="#ff4c4c4c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_dialog_fine_location_description" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/dialog_permission_check_layout"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="52.0dip"
                android:layout_marginTop="22.0dip">
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:theme="@style/MyAppCompatCheckBox"
                    android:gravity="center"
                    android:id="@id/dialog_permission_checkbox"
                    android:padding="6.0dip"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_width="52.0dip"
                    android:layout_height="52.0dip"
                    android:checked="true" />
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="@android:color/black"
                    android:gravity="center|left"
                    android:autoLink="web"
                    android:layout_gravity="center_vertical"
                    android:id="@id/dialog_permission_checkbox_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="4.0dip"
                    android:layout_marginRight="8.0dip"
                    android:layout_centerVertical="true" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@id/permission_dialog_bottom_layout"
        android:background="@drawable/dialog_bg_bluelight"
        android:paddingTop="12.0dip"
        android:paddingBottom="12.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24.0dip"
        android:layout_below="@id/myscroll">
        <Button
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/permission_dialog_buttonOpen"
            android:background="@drawable/my_button_bluelight"
            android:padding="4.0dip"
            android:layout_width="120.0dip"
            android:layout_height="wrap_content"
            android:text="@string/agree_and_use"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false" />
        <Button
            android:textSize="16.0sp"
            android:textColor="@color/white"
            android:id="@id/permission_dialog_authorize_later"
            android:background="@drawable/my_button_bluelight"
            android:padding="4.0dip"
            android:layout_width="120.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip"
            android:text="@string/authorize_later"
            android:layout_below="@id/permission_dialog_buttonOpen"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false" />
    </RelativeLayout>
</RelativeLayout>