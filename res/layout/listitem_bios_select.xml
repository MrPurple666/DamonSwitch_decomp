<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#ff474646"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.damonplay.damonps2.uiUtils.IconFontTextView
        android:textSize="@dimen/text_size_icon_tiny"
        android:textColor="@color/text_color_gray"
        android:gravity="center"
        android:id="@id/item_icon_right"
        android:layout_width="28.0dip"
        android:layout_height="28.0dip"
        android:layout_margin="6.0dip"
        android:layout_marginRight="10.0dip"
        android:text="@string/icon_next"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/item_title_checkbox"
        android:layout_width="fill_parent"
        android:layout_height="32.0dip">
        <androidx.appcompat.widget.AppCompatCheckBox
            android:theme="@style/MyAppCompatCheckBox"
            android:gravity="center"
            android:id="@id/item_checkbox"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:layout_marginRight="6.0dip"
            android:checked="true" />
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/text_color_white_light"
            android:gravity="center|left"
            android:layout_gravity="center_vertical"
            android:id="@id/listitem_bios_code"
            android:layout_width="fill_parent"
            android:layout_height="32.0dip"
            android:lineSpacingMultiplier="0.75" />
    </LinearLayout>
    <TextView
        android:textSize="11.0sp"
        android:textColor="@color/text_color_gray"
        android:gravity="center|left"
        android:id="@id/listitem_bios_path"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4.0dip"
        android:layout_toLeftOf="@id/item_icon_right"
        android:layout_below="@id/item_title_checkbox"
        android:layout_alignLeft="@id/item_title_checkbox"
        android:lineSpacingMultiplier="0.75" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/listitem_imglayout"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="18.0dip"
        android:layout_marginTop="2.0dip"
        android:layout_marginBottom="6.0dip"
        android:layout_below="@id/listitem_bios_path"
        android:layout_alignLeft="@id/listitem_bios_path">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@id/listitem_bios_image1"
            android:layout_width="wrap_content"
            android:layout_height="16.0dip"
            android:src="@drawable/ic_region_europe" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@id/listitem_bios_image2"
            android:layout_width="wrap_content"
            android:layout_height="16.0dip"
            android:layout_marginLeft="3.0dip"
            android:src="@drawable/ic_region_europe" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@id/listitem_bios_image3"
            android:layout_width="wrap_content"
            android:layout_height="16.0dip"
            android:layout_marginLeft="3.0dip"
            android:src="@drawable/ic_region_europe" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@id/listitem_bios_image4"
            android:layout_width="wrap_content"
            android:layout_height="16.0dip"
            android:layout_marginLeft="3.0dip"
            android:src="@drawable/ic_region_europe" />
    </LinearLayout>
</RelativeLayout>