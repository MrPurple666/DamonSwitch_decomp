<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="@drawable/background_dialog_corner_dark"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="260.0dip"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/text_color_white"
        android:id="@id/dialog_wheel_cancel"
        android:padding="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:text="@string/UserDefineLayoutReset"
        android:layout_alignParentLeft="true" />
    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/text_color_white"
        android:id="@id/dialog_wheel_ok"
        android:padding="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10.0dip"
        android:text="@android:string/ok"
        android:layout_alignParentRight="true" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="300.0dip"
        android:layout_marginBottom="10.0dip">
        <TextView
            android:textSize="18.0sp"
            android:textColor="@color/text_color_white"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@id/dialog_wheel_title"
            android:layout_width="fill_parent"
            android:layout_height="28.0dip"
            android:layout_marginTop="10.0dip" />
        <com.damonplay.damonps2.uiUtils.WheelView
            android:id="@id/dialog_wheel_view"
            android:layout_width="fill_parent"
            android:layout_height="260.0dip" />
    </LinearLayout>
</RelativeLayout>