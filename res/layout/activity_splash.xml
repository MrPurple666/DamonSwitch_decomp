<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@android:color/black"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@id/app_logo"
        android:background="@android:color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/gdt_splash_logo_en"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="GDTslogan" />
    <FrameLayout
        android:id="@id/splash_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/app_logo" />
    <TextView
        android:textSize="14.0sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@id/skip_view"
        android:background="@drawable/background_circle"
        android:layout_width="96.0dip"
        android:layout_height="wrap_content"
        android:layout_margin="16.0dip"
        android:text="点击跳过"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />
    <ImageView
        android:id="@id/splash_holder"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@mipmap/gdt_splash_holder"
        android:scaleType="fitXY"
        android:layout_above="@id/app_logo" />
    <ProgressBar
        android:id="@id/progressbar_2"
        android:visibility="gone"
        android:layout_width="96.0dip"
        android:layout_height="96.0dip"
        android:layout_above="@id/app_logo"
        android:layout_centerHorizontal="true"
        style="?android:progressBarStyle" />
    <TextView
        android:textSize="12.0sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@id/progressText"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40.0dip"
        android:layout_above="@id/app_logo"
        android:layout_centerHorizontal="true" />
</RelativeLayout>