<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/background_dialog_corner_dark"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="260.0dip"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="right"
            android:id="@id/dialog_close"
            android:src="@mipmap/ic_close"
            style="@style/dialog_close_style" />
        <TextView
            android:textSize="18.0sp"
            android:textColor="@color/text_color_white_light"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@id/dialog_common_title"
            android:layout_width="fill_parent"
            android:layout_height="28.0dip"
            android:layout_marginTop="10.0dip" />
    </FrameLayout>
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/text_color_white_light"
        android:gravity="left"
        android:id="@id/dialog_common_content"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.0dip"
        android:layout_marginBottom="10.0dip" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/dialog_common_check_layout"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="42.0dip"
        android:layout_marginLeft="6.0dip"
        android:layout_marginTop="10.0dip">
        <androidx.appcompat.widget.AppCompatCheckBox
            android:theme="@style/MyAppCompatCheckBox"
            android:layout_gravity="center_vertical"
            android:id="@id/dialog_common_checkbox"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="26.0dip"
            android:checked="false" />
        <TextView
            android:textSize="14.0sp"
            android:textColor="@color/text_color_white_light"
            android:gravity="center|left"
            android:layout_gravity="center_vertical"
            android:id="@id/dialog_common_checkbox_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.0dip"
            android:layout_marginRight="8.0dip"
            android:text="@string/dialog_game_remind"
            android:layout_centerVertical="true" />
    </LinearLayout>
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/text_color_white_light"
        android:gravity="center"
        android:id="@id/dialog_common_ok_btn"
        android:layout_width="fill_parent"
        android:layout_height="42.0dip"
        android:layout_margin="10.0dip"
        android:text="@android:string/ok" />
</LinearLayout>