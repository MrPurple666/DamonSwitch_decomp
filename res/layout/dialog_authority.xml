<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@id/authority_dialog_close"
        android:src="@mipmap/ic_close"
        android:layout_alignParentRight="true"
        style="@style/dialog_close_style" />
    <TextView
        android:textSize="16.0sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:id="@id/authority_dialog_title"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.0dip"
        android:layout_marginBottom="8.0dip"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/authority_dialog_middle_layout"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_margin="6.0dip"
        android:layout_below="@id/authority_dialog_title">
        <TextView
            android:textSize="14.0sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:autoLink="web"
            android:layout_gravity="center_vertical"
            android:id="@id/dialog_authority_checkbox_tip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />
    </LinearLayout>
    <RelativeLayout
        android:id="@id/authority_dialog_bottom_layout"
        android:background="@drawable/dialog_bg_bluelight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24.0dip"
        android:layout_below="@id/authority_dialog_middle_layout">
        <Button
            android:textSize="16.0sp"
            android:textColor="#ffffffff"
            android:id="@id/authority_dialog_buttonok"
            android:background="@drawable/my_button_bluelight"
            android:padding="8.0dip"
            android:layout_width="96.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.0dip"
            android:layout_marginBottom="6.0dip"
            android:text="@android:string/ok"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false" />
    </RelativeLayout>
</RelativeLayout>