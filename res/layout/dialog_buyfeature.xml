<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="@drawable/background_dialog_corner_dark"
    android:padding="@dimen/activity_horizontal_spacing"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="@dimen/text_size_icon"
        android:textStyle="bold"
        android:textColor="@color/text_color_pro"
        android:id="@id/dialog_buyfeature_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:text="@string/BuyFeatureDialog_title"
        android:layout_centerHorizontal="true" />
    <RelativeLayout
        android:id="@id/dialog_buyfeature_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:layout_below="@id/dialog_buyfeature_title">
        <ImageView
            android:id="@id/dialog_buyfeature_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gamepad_grey_56"
            android:layout_centerVertical="true" />
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/text_color_white_light"
            android:id="@id/dialog_buyfeature_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:text="@string/BuyFeatureDialog_content_gamepad"
            android:layout_toRightOf="@id/dialog_buyfeature_icon"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        android:id="@id/dialog_buyfeature_divider"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="8.0dip"
        android:layout_below="@id/dialog_buyfeature_content_layout"
        style="@style/DividerGrey" />
    <TextView
        android:textSize="12.0sp"
        android:textColor="@color/text_color_white_light"
        android:id="@id/dialog_buyfeature_content_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BuyFeatureDialog_content_common"
        android:layout_below="@id/dialog_buyfeature_divider"
        android:textAlignment="center" />
    <Button
        android:textSize="13.0sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@id/dialog_buyfeature_buyFeature"
        android:background="@drawable/my_button_green"
        android:layout_width="260.0dip"
        android:layout_height="56.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginBottom="8.0dip"
        android:text="@string/PurchaseThisFeature"
        android:layout_below="@id/dialog_buyfeature_content_common"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false" />
    <Button
        android:textSize="14.0sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@id/dialog_buyfeature_buyPro"
        android:background="@drawable/my_button_blue"
        android:paddingLeft="8.0dip"
        android:visibility="gone"
        android:layout_width="220.0dip"
        android:layout_height="80.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="8.0dip"
        android:text="@string/pro"
        android:drawableLeft="@drawable/ic_buyvip_48"
        android:layout_below="@id/dialog_buyfeature_buyFeature"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false" />
    <include
        android:id="@id/layout_buy_pro_inner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_buyfeature_buyPro"
        layout="@layout/layout_buy_pro_inner" />
    <Button
        android:textSize="12.0sp"
        android:textColor="@color/text_color_gray"
        android:id="@id/dialog_buyfeature_ignore"
        android:background="@color/transparent"
        android:paddingLeft="@dimen/activity_horizontal_spacing_big"
        android:paddingRight="@dimen/activity_horizontal_spacing_big"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height_46"
        android:layout_marginTop="@dimen/activity_horizontal_spacing"
        android:text="@string/string_ignore_start_game_now"
        android:layout_below="@id/layout_buy_pro_inner"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false" />
</RelativeLayout>