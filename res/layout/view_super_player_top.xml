<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    android:id="@id/app_video_top_box"
    android:background="#88000000"
    android:layout_width="fill_parent"
    android:layout_height="40.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@id/app_video_finish"
        android:padding="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="50.0dip"
        android:src="@drawable/icon_left"
        android:layout_centerVertical="true" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/view_jky_player_top_right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true">
        <ImageView
            android:textSize="16.0sp"
            android:textColor="@color/colorMyGray"
            android:gravity="center"
            android:id="@id/video_item_play"
            android:layout_width="46.0dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="2.0dip"
            android:layout_marginBottom="2.0dip"
            android:src="@drawable/icon_playgame"
            android:layout_alignParentRight="true" />
        <ImageView
            android:textSize="16.0dip"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@id/btn_media_play_share_top"
            android:padding="4.0dip"
            android:layout_width="46.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/appbar_padding_top"
            android:src="@drawable/icon_share"
            android:onClick="buttonClick" />
        <TextView
            android:textSize="14.0sp"
            android:textColor="#fff2f2f2"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/view_jky_play_iv_scale"
            android:background="@drawable/ijkplayer_ic_enlarge"
            android:layout_width="46.0dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip" />
        <TextView
            android:textSize="10.0sp"
            android:textColor="@color/colorMyGray"
            android:gravity="center"
            android:id="@id/video_item_criticism"
            android:paddingTop="2.0dip"
            android:paddingBottom="2.0dip"
            android:layout_width="46.0dip"
            android:layout_height="fill_parent"
            android:drawableTop="@drawable/icon_criticism"
            android:layout_toLeftOf="@id/video_item_praise"
            android:lineSpacingExtra="-3.0dip" />
        <TextView
            android:textSize="10.0sp"
            android:textColor="@color/colorMyGray"
            android:gravity="center"
            android:id="@id/video_item_praise"
            android:paddingTop="2.0dip"
            android:paddingBottom="2.0dip"
            android:layout_width="46.0dip"
            android:layout_height="fill_parent"
            android:drawableTop="@drawable/icon_praise"
            android:layout_alignParentRight="true"
            android:lineSpacingExtra="-3.0dip" />
        <TextView
            android:textSize="16.0sp"
            android:textColor="#fff2f2f2"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/view_jky_play_iv_speed"
            android:background="@drawable/background_item_corner_trans"
            android:visibility="gone"
            android:layout_width="52.0dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="6.0dip"
            android:layout_marginBottom="6.0dip"
            android:text="1.0" />
        <ImageView
            android:layout_gravity="center"
            android:id="@id/view_jky_play_iv_setting"
            android:padding="10.0dip"
            android:visibility="gone"
            android:layout_width="52.0dip"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_setting" />
        <ImageView
            android:layout_gravity="center"
            android:id="@id/view_jky_player_iv_share"
            android:padding="10.0dip"
            android:visibility="gone"
            android:layout_width="52.0dip"
            android:layout_height="fill_parent"
            android:src="@drawable/ijkplayer_ic_share" />
    </LinearLayout>
    <TextView
        android:textSize="14.0sp"
        android:textColor="@android:color/white"
        android:ellipsize="marquee"
        android:id="@id/app_video_title"
        android:padding="10.0dip"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:singleLine="true"
        android:layout_toLeftOf="@id/view_jky_player_top_right"
        android:layout_toRightOf="@id/app_video_finish"
        android:layout_centerVertical="true" />
</RelativeLayout>