<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="#a0000000"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="@color/dialog_background_white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/colorMyDark"
            android:gravity="center"
            android:id="@id/gamesetting_notice_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:text="@string/dialog_game_setting_compatible" />
        <TextView
            android:textSize="14.0sp"
            android:textColor="@color/colorMyDark"
            android:gravity="left"
            android:id="@id/gamesetting_notice_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:text="@string/dialog_game_setting_compatible_desc" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/gamesetting_notice_checkbox_layout"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginLeft="16.0dip">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:theme="@style/MyAppCompatCheckBox"
                android:layout_gravity="center_vertical"
                android:id="@id/gamesetting_notice_checkbox"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="26.0dip"
                android:checked="false" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="@color/colorMyDark"
                android:gravity="center|left"
                android:layout_gravity="center_vertical"
                android:id="@id/gamesetting_notice_checkbox_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.0dip"
                android:layout_marginRight="8.0dip"
                android:text="@string/dialog_game_remind"
                android:layout_centerVertical="true" />
        </LinearLayout>
        <View
            android:background="@color/colorMyDark"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginTop="16.0dip" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/gamesetting_notice_btn_layout"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip">
            <TextView
                android:textSize="14.0sp"
                android:textColor="@color/colorMyDark"
                android:gravity="center"
                android:id="@id/gamesetting_notice_cancel"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:text="@android:string/cancel"
                android:layout_weight="1.0" />
            <View
                android:background="@color/colorMyDark"
                android:layout_width="1.0px"
                android:layout_height="32.0dip"
                android:layout_marginTop="4.0dip"
                android:layout_marginBottom="4.0dip" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="@color/colorMyDark"
                android:gravity="center"
                android:id="@id/gamesetting_notice_ok"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_marginBottom="10.0dip"
                android:text="@android:string/ok"
                android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>