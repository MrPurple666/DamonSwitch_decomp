<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@id/game_item_poster_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.0dip">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@id/game_item_poster"
            android:background="@color/colorPrimary2"
            android:paddingLeft="1.0px"
            android:paddingRight="1.0px"
            android:layout_width="210.0dip"
            android:layout_height="300.0dip"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/bg_poster_default3" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/game_item_poster_progress_layout"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip">
            <LinearLayout
                android:orientation="vertical"
                android:id="@id/game_item_compatibility_layout"
                android:background="@color/uvv_black"
                android:paddingLeft="4.0dip"
                android:layout_width="wrap_content"
                android:layout_height="20.0dip"
                android:layout_weight="1.0"
                xmlns:rectProgressView="http://schemas.android.com/apk/res-auto">
                <TextView
                    android:textSize="8.0sp"
                    android:textColor="@color/colorMyGray"
                    android:gravity="left"
                    android:id="@id/game_item_compatibility_text"
                    android:layout_width="fill_parent"
                    android:layout_height="10.0dip"
                    android:text="@string/game_compatibility" />
                <com.damonplay.damonps2.uiUtils.RectProgressView
                    android:id="@id/game_item_compatibility_progress"
                    android:layout_width="fill_parent"
                    android:layout_height="6.0dip"
                    android:layout_marginTop="2.0dip"
                    rectProgressView:border="0.5dip"
                    rectProgressView:spacing="0.0dip" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@id/game_item_fluency_layout"
                android:background="@color/uvv_black"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:layout_width="wrap_content"
                android:layout_height="20.0dip"
                android:layout_weight="1.0"
                xmlns:rectProgressView="http://schemas.android.com/apk/res-auto">
                <TextView
                    android:textSize="8.0sp"
                    android:textColor="@color/colorMyGray"
                    android:gravity="left"
                    android:id="@id/game_item_fluency_text"
                    android:layout_width="fill_parent"
                    android:layout_height="10.0dip"
                    android:text="@string/game_fluency" />
                <com.damonplay.damonps2.uiUtils.RectProgressView
                    android:id="@id/game_item_fluency_progress"
                    android:layout_width="fill_parent"
                    android:layout_height="6.0dip"
                    android:layout_marginTop="2.0dip"
                    rectProgressView:border="0.5dip"
                    rectProgressView:spacing="0.0dip" />
            </LinearLayout>
        </LinearLayout>
        <com.damonplay.damonps2.uiUtils.TriangleLabelView
            android:id="@id/game_item_triangle_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:layout_alignLeft="@id/game_item_poster"
            android:layout_alignTop="@id/game_item_poster"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:corner="leftTop"
            app:primaryTextColor="@color/colorMyGray"
            app:primaryTextSize="16.0sp"
            app:primaryTextStyle="bold_1" />
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@id/game_item_poster_bottom_layout"
            android:paddingTop="16.0dip"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="fill_parent"
            android:layout_height="36.0dip"
            android:layout_alignLeft="@id/game_item_poster"
            android:layout_alignRight="@id/game_item_poster"
            android:layout_alignBottom="@id/game_item_poster">
            <TextView
                android:textSize="12.0sp"
                android:textColor="@color/colorMyGray"
                android:gravity="center|right"
                android:id="@id/game_item_poster_bottom_rating"
                android:background="@color/qr_code_finder_mask"
                android:paddingRight="4.0dip"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="fill_parent"
                android:layout_height="20.0dip"
                android:text="3.6"
                android:layout_alignParentRight="true" />
            <ImageView
                android:id="@id/game_item_poster_bottom_delete"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="28.0dip"
                android:layout_height="20.0dip"
                android:src="@drawable/ic_delete_64"
                android:layout_alignParentLeft="true" />
            <com.damonplay.damonps2.uiUtils.ratingstar.RatingStarView
                android:id="@id/game_item_poster_bottom_ratingBar"
                android:padding="4.0dip"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="fill_parent"
                android:layout_height="12.0dip"
                android:layout_toLeftOf="@id/game_item_poster_bottom_rating"
                android:layout_toRightOf="@id/game_item_poster_bottom_delete"
                android:layout_alignTop="@id/game_item_poster_bottom_delete"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                ratingStar:rs_rating="3.6"
                ratingStar:rs_starBackgroundColor="@color/colorMyDark"
                ratingStar:rs_starForegroundColor="#fff4ea2a"
                ratingStar:rs_starMargin="1.0dip"
                ratingStar:rs_starNum="5"
                ratingStar:rs_strokeColor="#fff4ea2a"
                ratingStar:rs_strokeWidth="1.0px"
                xmlns:ratingStar="http://schemas.android.com/apk/res-auto" />
            <TextView
                android:id="@id/game_item_poster_bottom_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="28.0dip" />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:textSize="10.0sp"
        android:textColor="@color/colorMyGray"
        android:gravity="center"
        android:id="@id/game_item_state"
        android:background="@drawable/background_item_corner_trans"
        android:layout_width="fill_parent"
        android:layout_height="16.0dip"
        android:layout_margin="2.0dip"
        android:text="@string/sync_not" />
    <TextView
        android:textAppearance="?textAppearanceListItem"
        android:textSize="10.0sp"
        android:textColor="@color/colorMyGray"
        android:ellipsize="end"
        android:gravity="center|left"
        android:id="@id/game_item_title"
        android:layout_width="fill_parent"
        android:layout_height="26.0dip"
        android:layout_marginLeft="2.0dip"
        android:layout_marginRight="2.0dip"
        android:maxLines="2"
        android:lineSpacingExtra="-3.0dip" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/game_property_content_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/game_property_layout1"
            android:layout_width="fill_parent"
            android:layout_height="20.0dip">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:id="@id/game_item_language_layout"
                android:background="@drawable/background_item_corner_trans"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="16.0dip"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:padding="2.0dip"
                    android:layout_width="16.0dip"
                    android:layout_height="16.0dip"
                    android:src="@drawable/icon_language"
                    android:layout_weight="1.0" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@id/game_item_language"
                    android:padding="2.0dip"
                    android:layout_width="16.0dip"
                    android:layout_height="16.0dip"
                    android:src="@drawable/ic_lang_en"
                    android:layout_weight="1.0" />
            </LinearLayout>
            <TextView
                android:textSize="10.0sp"
                android:textColor="@color/colorMyGray"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@id/game_item_size"
                android:background="@drawable/background_item_corner_trans"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="16.0dip"
                android:layout_margin="2.0dip"
                android:singleLine="true"
                android:layout_weight="1.0" />
            <ImageView
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@id/game_item_light_icon"
                android:background="@drawable/background_item_corner_trans"
                android:visibility="gone"
                android:layout_width="0.0dip"
                android:layout_height="16.0dip"
                android:layout_margin="2.0dip"
                android:src="@drawable/icon_lightning"
                android:layout_weight="1.0" />
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:id="@id/game_item_region_layout"
                android:background="@drawable/background_item_corner_trans"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="16.0dip"
                android:layout_margin="2.0dip"
                android:layout_weight="1.0">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:padding="2.0dip"
                    android:layout_width="16.0dip"
                    android:layout_height="16.0dip"
                    android:src="@drawable/icon_region"
                    android:layout_weight="1.0" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@id/game_item_region"
                    android:padding="2.0dip"
                    android:layout_width="16.0dip"
                    android:layout_height="16.0dip"
                    android:src="@drawable/ic_region_usa"
                    android:layout_weight="1.0" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/game_property_layout2"
            android:layout_width="fill_parent"
            android:layout_height="20.0dip">
            <TextView
                android:textSize="10.0sp"
                android:textColor="@color/colorMyGray"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@id/game_item_year"
                android:background="@drawable/background_item_corner_trans"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="16.0dip"
                android:layout_margin="2.0dip"
                android:singleLine="true"
                android:layout_weight="1.0" />
            <TextView
                android:textSize="10.0sp"
                android:textColor="@color/colorMyGray"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@id/game_item_type"
                android:background="@drawable/background_item_corner_trans"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="16.0dip"
                android:layout_margin="2.0dip"
                android:singleLine="true"
                android:layout_weight="1.0" />
            <TextView
                android:textSize="10.0sp"
                android:textColor="@color/colorMyGray"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@id/game_item_platform"
                android:background="@drawable/background_item_corner_trans"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="16.0dip"
                android:layout_margin="2.0dip"
                android:singleLine="true"
                android:layout_weight="1.0" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/game_property_layout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10.0sp"
                android:textColor="@color/colorMyGray"
                android:gravity="center"
                android:id="@id/game_property_remote_tag1"
                android:background="@drawable/background_item_corner_trans"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="16.0dip"
                android:layout_margin="2.0dip"
                android:singleLine="true"
                android:layout_weight="1.0" />
            <TextView
                android:textSize="10.0sp"
                android:textColor="@color/colorMyGray"
                android:gravity="center"
                android:id="@id/game_property_remote_tag2"
                android:background="@drawable/background_item_corner_trans"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="16.0dip"
                android:layout_margin="2.0dip"
                android:singleLine="true"
                android:layout_weight="1.0" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/game_property_layout4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10.0sp"
                android:textColor="@color/colorMyGray"
                android:gravity="center"
                android:id="@id/game_property_remote_tag3"
                android:background="@drawable/background_item_corner_trans"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="16.0dip"
                android:layout_margin="2.0dip"
                android:singleLine="true"
                android:layout_weight="1.0" />
            <TextView
                android:textSize="10.0sp"
                android:textColor="@color/colorMyGray"
                android:gravity="center"
                android:id="@id/game_property_remote_tag4"
                android:background="@drawable/background_item_corner_trans"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="16.0dip"
                android:layout_margin="2.0dip"
                android:singleLine="true"
                android:layout_weight="1.0" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/game_property_layout5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10.0sp"
                android:textColor="@color/colorMyGray"
                android:gravity="center"
                android:id="@id/game_property_remote_tag5"
                android:background="@drawable/background_item_corner_trans"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="16.0dip"
                android:layout_margin="2.0dip"
                android:singleLine="true"
                android:layout_weight="1.0" />
            <TextView
                android:textSize="10.0sp"
                android:textColor="@color/colorMyGray"
                android:gravity="center"
                android:id="@id/game_property_remote_tag6"
                android:background="@drawable/background_item_corner_trans"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="16.0dip"
                android:layout_margin="2.0dip"
                android:singleLine="true"
                android:layout_weight="1.0" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/game_property_layout6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10.0sp"
                android:textColor="@color/colorMyGray"
                android:gravity="center"
                android:id="@id/game_property_remote_tag7"
                android:background="@drawable/background_item_corner_trans"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="16.0dip"
                android:layout_margin="2.0dip"
                android:singleLine="true"
                android:layout_weight="1.0" />
            <TextView
                android:textSize="10.0sp"
                android:textColor="@color/colorMyGray"
                android:gravity="center"
                android:id="@id/game_property_remote_tag8"
                android:background="@drawable/background_item_corner_trans"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="16.0dip"
                android:layout_margin="2.0dip"
                android:singleLine="true"
                android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>