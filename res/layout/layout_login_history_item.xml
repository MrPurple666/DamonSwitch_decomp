<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/color_gray_deep"
    android:layout_width="fill_parent"
    android:layout_height="80.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@id/login_history_item_avatar"
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:layout_marginLeft="@dimen/activity_horizontal_spacing"
        android:src="@mipmap/ic_user_portrait"
        android:layout_centerVertical="true"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="0.0dip" />
    <TextView
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/colorMyGray"
        android:gravity="center_vertical"
        android:id="@id/login_history_item_name"
        android:layout_width="wrap_content"
        android:layout_height="28.0dip"
        android:layout_toRightOf="@id/login_history_item_avatar"
        android:layout_marginStart="8.0dip" />
    <ImageView
        android:id="@id/login_history_item_pro_iv"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:layout_width="40.0dip"
        android:layout_height="22.0dip"
        android:src="@mipmap/ic_pro_gray"
        android:layout_below="@id/login_history_item_name"
        android:layout_alignLeft="@id/login_history_item_name" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:id="@id/login_history_item_donate_layout"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:layout_width="wrap_content"
        android:layout_height="22.0dip"
        android:layout_toRightOf="@id/login_history_item_pro_iv"
        android:layout_alignTop="@id/login_history_item_pro_iv">
        <ImageView
            android:id="@id/login_history_item_donate_iv"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="22.0dip"
            android:layout_marginRight="2.0dip"
            android:src="@mipmap/ic_donate_gray" />
        <ImageView
            android:id="@id/login_history_item_donate_iv2"
            android:focusable="false"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="22.0dip"
            android:layout_marginRight="2.0dip"
            android:src="@mipmap/ic_donate" />
        <ImageView
            android:id="@id/login_history_item_donate_iv3"
            android:focusable="false"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="22.0dip"
            android:src="@mipmap/ic_donate" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:textSize="@dimen/text_size_tiny"
        android:textColor="@color/text_color_white_light"
        android:gravity="center_vertical"
        android:id="@id/login_history_item_time"
        android:layout_width="wrap_content"
        android:layout_height="22.0dip"
        android:layout_below="@id/login_history_item_donate_layout"
        android:layout_alignLeft="@id/login_history_item_name" />
    <ImageView
        android:id="@id/login_history_item_region"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="8.0dip"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8.0dip"
        android:layout_marginEnd="8.0dip" />
    <TextView
        android:textSize="@dimen/text_size_title"
        android:textColor="@color/colorMyGray"
        android:id="@id/login_history_item_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="8.0dip"
        android:drawableLeft="@mipmap/ic_cloud_server"
        android:drawablePadding="4.0dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8.0dip"
        android:layout_marginEnd="8.0dip" />
</RelativeLayout>