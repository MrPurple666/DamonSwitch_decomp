<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/button_height_46"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.damonplay.damonps2.uiUtils.IconFontTextView
        android:textSize="@dimen/text_size_title"
        android:textColor="@color/text_color_gray_deep"
        android:gravity="center"
        android:layout_gravity="right"
        android:id="@id/simple_item_check"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="@dimen/activity_horizontal_spacing_big"
        android:text="@string/icon_check"
        android:layout_alignParentRight="true" />
    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/colorMyDark"
        android:gravity="center"
        android:id="@id/simple_item_text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_spacing_big"
        android:singleLine="true" />
    <ImageView
        android:id="@id/simple_item_line"
        android:background="@color/color_bg_line"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="@dimen/activity_horizontal_spacing"
        android:layout_marginRight="@dimen/activity_horizontal_spacing"
        android:layout_alignParentBottom="true" />
</RelativeLayout>