<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="@drawable/background_dialog_corner_dark"
    android:paddingTop="16.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minWidth="260.0dip"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:id="@id/dialog_play_drive_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/gamesetting_notice_contact">
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/dialog_play_drive_scrollcontent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:textColor="@color/text_color_white_light"
                android:gravity="center"
                android:id="@id/dialog_play_drive_line1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginRight="10.0dip" />
            <TextView
                android:textSize="16.0sp"
                android:textColor="@color/text_color_white_light"
                android:gravity="center|left"
                android:id="@id/dialog_play_drive_line2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginRight="10.0dip" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip">
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="@color/text_color_white_light"
                    android:gravity="center|left"
                    android:id="@id/dialog_play_drive_line3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginRight="10.0dip"
                    android:drawableLeft="@drawable/icon_dot" />
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="@color/text_color_white_light"
                    android:gravity="center|left"
                    android:id="@id/dialog_play_drive_line4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginRight="10.0dip"
                    android:drawableLeft="@drawable/icon_dot" />
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="@color/text_color_white_light"
                    android:gravity="center|left"
                    android:id="@id/dialog_play_drive_line5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginRight="10.0dip"
                    android:drawableLeft="@drawable/icon_dot" />
            </LinearLayout>
            <TextView
                android:textSize="16.0sp"
                android:textColor="@color/text_color_white_light"
                android:gravity="center|left"
                android:id="@id/dialog_play_drive_line6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginRight="10.0dip"
                android:text="@string/playdrive_desc_6" />
            <TextView
                android:textSize="14.0sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center|left"
                android:autoLink="email"
                android:id="@id/dialog_play_drive_line7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginRight="10.0dip"
                android:text="@string/playdrive_desc_7" />
            <TextView
                android:textSize="14.0sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center|left"
                android:id="@id/dialog_play_drive_line8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginRight="10.0dip"
                android:text="@string/playdrive_desc_8" />
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/dialog_play_drive_check_layout"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginLeft="16.0dip">
                <CheckBox
                    android:layout_gravity="center_vertical"
                    android:id="@id/dialog_play_drive_checkbox"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="26.0dip"
                    android:checked="false" />
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="@color/colorMyDark"
                    android:gravity="center|left"
                    android:layout_gravity="center_vertical"
                    android:id="@id/dialog_play_drive_checkbox_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4.0dip"
                    android:layout_marginRight="8.0dip"
                    android:text="@string/dialog_game_remind"
                    android:layout_centerVertical="true" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:textSize="14.0sp"
        android:textColor="@color/text_color_white_light"
        android:gravity="center"
        android:id="@id/gamesetting_notice_contact"
        android:background="@drawable/ripple2"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="10.0dip"
        android:text="@string/main_recent_top_btn_local"
        android:layout_above="@id/gamesetting_notice_scan"
        android:onClick="onViewClick"
        android:textAllCaps="false" />
    <Button
        android:textSize="14.0sp"
        android:textColor="@color/text_color_white_light"
        android:gravity="center"
        android:id="@id/gamesetting_notice_scan"
        android:background="@drawable/ripple2"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="10.0dip"
        android:text="@string/playdrice_scan_rom"
        android:layout_above="@id/gamesetting_notice_agree"
        android:onClick="onViewClick"
        android:textAllCaps="false" />
    <Button
        android:textSize="14.0sp"
        android:textColor="@color/text_color_gray_deep"
        android:gravity="center"
        android:id="@id/gamesetting_notice_agree"
        android:background="@drawable/ripple2"
        android:clickable="false"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="10.0dip"
        android:text="@string/agree_with_the_above"
        android:layout_above="@id/playdrive_bottom_anchor"
        android:onClick="onViewClick"
        android:textAllCaps="false"
        android:layout_marginStart="10.0dip"
        android:layout_marginEnd="10.0dip" />
    <ImageView
        android:id="@id/dialog_close"
        android:visibility="gone"
        android:src="@mipmap/ic_close"
        android:layout_alignParentRight="true"
        style="@style/dialog_close_style" />
    <View
        android:id="@id/playdrive_bottom_anchor"
        android:layout_width="fill_parent"
        android:layout_height="2.0dip"
        android:layout_alignParentBottom="true" />
</RelativeLayout>