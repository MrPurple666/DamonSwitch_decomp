<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:id="@id/root"
    android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="64.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_gravity="center"
        android:id="@id/icon"
        android:background="#ff2a90d7"
        android:duplicateParentState="false"
        android:layout_width="44.0dip"
        android:layout_height="44.0dip"
        android:layout_marginRight="18.0dip"
        android:scaleType="center"
        android:layout_marginEnd="18.0dip" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">
        <TextView
            android:textSize="14.0sp"
            android:textColor="#ff999999"
            android:ellipsize="end"
            android:id="@id/desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/download_success"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc">
            <TextView
                android:textSize="14.0sp"
                android:textColor="#ff999999"
                android:ellipsize="end"
                android:gravity="start|center"
                android:id="@id/download_success_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12.0dip"
                android:singleLine="true"
                android:layout_marginEnd="12.0dip" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="#ff999999"
                android:ellipsize="end"
                android:gravity="start|center"
                android:id="@id/download_success_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/download_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc">
            <TextView
                android:textSize="10.0sp"
                android:textColor="#ff999999"
                android:ellipsize="end"
                android:gravity="start|center"
                android:id="@id/download_size"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="3.0" />
            <TextView
                android:textSize="10.0sp"
                android:textColor="#ff999999"
                android:ellipsize="end"
                android:gravity="end|center"
                android:id="@id/download_status"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight="2.0" />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:textSize="14.0sp"
        android:textColor="#ff999999"
        android:gravity="center"
        android:layout_gravity="end|center"
        android:id="@id/action"
        android:layout_width="55.0dip"
        android:layout_height="30.0dip"
        android:layout_marginLeft="18.0dip"
        android:layout_weight="0.0"
        android:layout_marginStart="18.0dip" />
</LinearLayout>