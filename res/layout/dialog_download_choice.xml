<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/background_dialog_corner_dark"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="260.0dip"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_gravity="right"
                android:id="@id/dialog_close"
                android:src="@mipmap/ic_close"
                style="@style/dialog_close_style" />
            <LinearLayout
                android:orientation="vertical"
                android:id="@id/download_choice_flash_play_desc_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip">
                <TextView
                    android:textSize="16.0sp"
                    android:textColor="@color/text_color_white_light"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dip"
                    android:text="@string/flash_download_title" />
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_white_light"
                    android:paddingLeft="4.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/flash_download_content_name1" />
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="@color/text_color_white_light"
                    android:paddingLeft="4.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/flash_download_content_text1" />
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_white_light"
                    android:paddingLeft="4.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/flash_download_content_name2" />
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="@color/text_color_white_light"
                    android:paddingLeft="4.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/flash_download_content_text2" />
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="@color/text_color_white_light"
                    android:paddingLeft="4.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:text="@string/flash_download_more" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@id/dialog_play_drive_check_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip">
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:theme="@style/MyAppCompatCheckBox"
                        android:layout_gravity="center_vertical"
                        android:id="@id/dialog_play_drive_checkbox"
                        android:focusable="false"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="26.0dip"
                        android:checked="false" />
                    <TextView
                        android:textSize="14.0sp"
                        android:textColor="@color/text_color_white_light"
                        android:gravity="center|left"
                        android:layout_gravity="center_vertical"
                        android:id="@id/dialog_play_drive_checkbox_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.0dip"
                        android:layout_marginRight="8.0dip"
                        android:text="@string/dialog_game_remind"
                        android:layout_centerVertical="true" />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:orientation="vertical"
                android:id="@id/download_choice_flash_play_layout"
                android:background="@drawable/background_btn_corner_dark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginBottom="10.0dip">
                <TextView
                    android:textSize="18.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorMyYellow"
                    android:gravity="center"
                    android:id="@id/download_choice_flash_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.0dip"
                    android:layout_marginTop="6.0dip"
                    android:text="@string/flash_download"
                    android:drawableLeft="@drawable/icon_lightning" />
                <TextView
                    android:textSize="12.0sp"
                    android:textColor="@color/colorMyGray"
                    android:id="@id/download_choice_flash_play_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:text="@string/flash_download1"
                    android:layout_below="@id/download_choice_flash_play" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@id/dialog_play_drive_check_layout2"
                    android:layout_width="fill_parent"
                    android:layout_height="46.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:layout_below="@id/download_choice_flash_play_text">
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:theme="@style/MyAppCompatCheckBox"
                        android:layout_gravity="center_vertical"
                        android:id="@id/dialog_play_drive_checkbox2"
                        android:focusable="false"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="26.0dip"
                        android:checked="false" />
                    <TextView
                        android:textSize="12.0sp"
                        android:textColor="@color/colorMyBlueLight"
                        android:gravity="center|left"
                        android:layout_gravity="center_vertical"
                        android:id="@id/dialog_play_drive_checkbox_tip2"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="4.0dip"
                        android:layout_marginRight="8.0dip"
                        android:text="@string/flash_play_fastest" />
                </LinearLayout>
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="@color/qr_code_white"
                    android:gravity="center"
                    android:background="@drawable/ic_buybg"
                    android:layout_width="52.0dip"
                    android:layout_height="52.0dip"
                    android:text="@string/recommend"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="vertical"
                android:id="@id/download_choice_full_download_layout"
                android:background="@drawable/background_btn_corner_dark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip">
                <TextView
                    android:textSize="16.0sp"
                    android:textColor="@color/text_color_white_light"
                    android:gravity="center"
                    android:id="@id/download_choice_flash_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="6.0dip"
                    android:text="@string/full_download"
                    android:drawableLeft="@drawable/icon_run_disk" />
                <TextView
                    android:textSize="12.0sp"
                    android:textColor="@color/colorMyGray"
                    android:id="@id/download_choice_full_traffic"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="6.0dip"
                    android:layout_below="@id/download_choice_flash_download"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            <TextView
                android:textSize="12.0sp"
                android:textColor="@android:color/holo_red_dark"
                android:id="@id/download_choice_flash_quota_tip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip" />
            <Button
                android:textSize="14.0sp"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center"
                android:id="@id/download_choice_need_traffic_btn"
                android:background="@drawable/background_btn_corner_dark"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:text="@string/download_traffic_insufficient" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>