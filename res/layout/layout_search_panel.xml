<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:focusableInTouchMode="true"
    android:layout_width="fill_parent"
    android:layout_height="36.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="10.0sp"
        android:textColor="@color/colorMyGray"
        android:gravity="center"
        android:id="@id/sync_search_advanced"
        android:background="@drawable/btn_backgroud_search"
        android:visibility="visible"
        android:layout_width="62.0dip"
        android:layout_height="30.0dip"
        android:text="@string/search_advanced"
        android:drawableRight="@drawable/icon_dropdown"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />
    <com.damonplay.alib.uiUtil.ActionEditText
        android:textSize="12.0sp"
        android:textColor="@color/colorMyGray"
        android:textColorHint="@color/colorMyGrayer"
        android:gravity="center|left"
        android:id="@id/sync_search_et"
        android:background="@drawable/background_search_corner_trans_blue"
        android:paddingLeft="4.0dip"
        android:layout_width="fill_parent"
        android:layout_height="30.0dip"
        android:layout_marginRight="4.0dip"
        android:hint="@string/playdrice_search_hint"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_toRightOf="@id/sync_search_advanced"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:inputType="text"
        android:imeOptions="actionSearch" />
    <ImageView
        android:id="@id/search_panel_close"
        android:paddingLeft="8.0dip"
        android:paddingTop="4.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="4.0dip"
        android:visibility="invisible"
        android:layout_width="36.0dip"
        android:layout_height="36.0dip"
        android:src="@mipmap/ic_close"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:id="@id/search_panel_search"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:visibility="invisible"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:src="@mipmap/ic_query"
        android:layout_toLeftOf="@id/search_panel_close"
        android:layout_centerVertical="true" />
</RelativeLayout>