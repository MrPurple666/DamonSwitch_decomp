<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@id/dialog_gift_top"
        android:layout_width="120.0dip"
        android:layout_height="120.0dip"
        android:src="@drawable/ic_buy_pro_head"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@id/dialog_close"
        android:src="@mipmap/ic_close"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        style="@style/dialog_close_style" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="-1.0dip"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@id/dialog_gift_top">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/background_dialog_corner_dark"
            android:padding="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16.0sp"
                android:textColor="@color/colorMyGray"
                android:id="@id/signin_gift_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/sign_in_gift" />
            <TextView
                android:textSize="16.0sp"
                android:textColor="@color/bt_red"
                android:id="@id/signin_gift_more"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:drawableLeft="@drawable/ic_jiangpin"
                android:drawablePadding="4.0dip" />
            <Button
                android:textSize="16.0sp"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:layout_gravity="center_horizontal"
                android:id="@id/signin_gift_btn"
                android:background="@drawable/my_button_yellow"
                android:padding="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.0dip" />
        </LinearLayout>
        <View
            android:layout_gravity="center_horizontal"
            android:id="@id/dialog_gift_padding_bottom"
            android:layout_width="120.0dip"
            android:layout_height="120.0dip" />
    </LinearLayout>
</RelativeLayout>