<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="13.0sp"
        android:id="@id/rate_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_centerHorizontal="true" />
    <RelativeLayout
        android:orientation="vertical"
        android:id="@id/rate_dialog_buttonlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="8.0dip"
        android:layout_below="@id/rate_dialog_content">
        <Button
            android:textSize="12.0sp"
            android:gravity="center|left"
            android:id="@id/rate_dialog_buttonTop"
            android:background="@drawable/my_button_rate"
            android:paddingLeft="2.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:text="@string/RateDialog_Positive"
            android:drawableLeft="@drawable/ic_like_40"
            android:drawablePadding="2.0dip"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false" />
        <Button
            android:textSize="12.0sp"
            android:gravity="center|left"
            android:id="@id/rate_dialog_buttonCenter"
            android:background="@drawable/my_button_rate"
            android:paddingLeft="2.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginRight="8.0dip"
            android:text="@string/RateDialog_Negative"
            android:drawableLeft="@drawable/ic_angry_40"
            android:drawablePadding="2.0dip"
            android:layout_below="@id/rate_dialog_buttonTop"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false" />
        <Button
            android:textSize="14.0sp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@id/rate_dialog_buttonBottom"
            android:background="@drawable/my_button_rate2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginRight="8.0dip"
            android:text="@string/RateDialog_DoNotRemind"
            android:layout_below="@id/rate_dialog_buttonCenter"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false" />
    </RelativeLayout>
</RelativeLayout>