<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/background_dialog_corner_dark"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:minWidth="260.0dip"
        android:layout_centerInParent="true">
        <TextView
            android:textSize="20.0sp"
            android:textColor="@color/text_color_white"
            android:gravity="center|left"
            android:id="@id/layout_item_name"
            android:layout_width="wrap_content"
            android:layout_height="48.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="10.0dip"
            android:text="@string/scale_add_remove" />
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/text_color_white"
            android:gravity="center|right"
            android:id="@id/layout_item_clean"
            android:padding="12.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip"
            android:layout_marginRight="20.0dip"
            android:text="@string/clear"
            android:layout_alignParentRight="true" />
        <ImageView
            android:id="@id/layout_item_name_line"
            android:background="@color/color_bg_line"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="6.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_below="@id/layout_item_name" />
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/text_color_white"
            android:gravity="center"
            android:id="@id/layout_item_ok_btn"
            android:layout_width="100.0dip"
            android:layout_height="60.0dip"
            android:text="@android:string/ok"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" />
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/text_color_white"
            android:gravity="center"
            android:id="@id/layout_item_cancel_btn"
            android:layout_width="100.0dip"
            android:layout_height="60.0dip"
            android:text="@android:string/cancel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" />
        <ImageView
            android:id="@id/layout_item_ok_btn_line"
            android:background="@color/color_bg_line"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginBottom="60.0dip"
            android:layout_alignParentBottom="true" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/dialog_multiple_recyclerview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/layout_item_ok_btn_line"
            android:layout_below="@id/layout_item_name_line" />
    </RelativeLayout>
</LinearLayout>